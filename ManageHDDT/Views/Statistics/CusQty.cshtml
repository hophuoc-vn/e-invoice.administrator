@{
    ViewBag.Title = "Thống kê ► Lượng khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- #region Styling refs -->
<link href="~/Content/custom/cus-qty.statistics.css" rel="stylesheet" />
<!-- #endregion -->
<!-- #region Scripting refs -->
<script src="~/Scripts/custom/cus-qty.statistics.js"></script>
<!-- #endregion -->

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card m-b-30">
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <i class="more-less fa fa-angle-up"></i>
                                    Đầu vào khách hàng
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse show" role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-7">
                                        <h4 class="mt-0 header-title fit-w"><i class="fas fa-chart-bar i-fa-w-16"></i>Biểu đồ đầu vào khách hàng</h4>
                                        <div id="cus-entry-chart-indicator"></div>
                                        <div class="dx-field">
                                            <div class="dx-field-value w-100">
                                                <div id="year-selector"></div>
                                            </div>
                                        </div>
                                        <div id="cus-entry-chart"></div>
                                        <div class="button-container">
                                            <div id="backButton"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-5">
                                        <h4 class="mt-0 header-title fit-w"><i class="fa fa-columns i-fa-w-16"></i>Bảng kê đầu vào khách hàng</h4>
                                        <div id="cus-entry-table-indicator"></div>
                                        <div class="w-100 d-inline-flex">
                                            <div class="dx-field w-48-pc">
                                                <div class="dx-field-label w-auto" id="date-picker-start-label">Từ</div>
                                                <div class="dx-field-value float-left w-88-pc">
                                                    <div id="date-picker-start"></div>
                                                </div>
                                            </div>
                                            <div class="dx-field d-inline-block w-48-pc">
                                                <div class="dx-field-label w-auto" id="date-picker-end-label">Đến</div>
                                                <div class="dx-field-value w-88-pc">
                                                    <div id="date-picker-end"></div>
                                                </div>
                                            </div>
                                            <div class="dx-field d-inline-block w-fit-content m-l-1-pc">
                                                <div id="search-btn" class="float-right"></div>
                                            </div>
                                        </div>
                                        <div id="cus-entry-table"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingTwo">
                            <h4 class="panel-title">
                                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    <i class="more-less fa fa-angle-up"></i>
                                    Trạng thái dịch vụ
                                </a>
                            </h4>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse show" role="tabpanel" aria-labelledby="headingTwo">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <h4 class="mt-0 header-title fit-w"><i class="fas fa-chart-bar i-fa-w-16"></i>Biểu đồ trạng thái dịch vụ</h4>
                                        <div id="co-qty-chart-indicator"></div>
                                        <div id="co-qty-chart"></div>
                                    </div>
                                    <div class="col-lg-8">
                                        <h4 class="mt-0 header-title fit-w"><i class="fa fa-columns i-fa-w-16"></i>Bảng kê các công ty: <span id="co-qty-table-title" /></h4>
                                        <div id="co-qty-table-indicator"></div>
                                        <div id="co-qty-table" class="clear-both"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>